	  \edef\textgreater{\@percentchar3E}% instead of {\sting>} for Apple
	  \edef\x{\toks1={\noexpand\small\noexpand\urlfont\noexpand\href{https://dx.doi.org/#1}}}% 
	  \x
	  \edef\x{\endgroup\noexpand\urlfont doi:\,\the\toks1 \the\toks0\endgroup}%
	  \x\/\xspace%
	}





